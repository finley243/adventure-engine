<data>
    <action id="lock_pick">
        <prompt>Pick lock</prompt>
        <phrase>pickLock</phrase>
        <condition>
            <condition type="boolean">
                <var type="stat" dataType="boolean" stat="locked" holder="parentObject"/>
            </condition>
            <condition type="compare" equality="GREATER_EQUAL">
                <var1 type="stat" dataType="int" stat="lockpick" holder="subject"/>
                <var2 type="stat" dataType="int" stat="lock_pick_difficulty" holder="parentObject"/>
            </condition>
        </condition>
        <script type="setState" state="locked" holder="parentObject">
            <var dataType="boolean" value="false"/>
        </script>
    </action>
    <action id="lock_key">
        <prompt>Unlock</prompt>
        <phrase>unlock</phrase>
        <condition>
            <condition type="boolean">
                <var type="stat" dataType="boolean" stat="locked" holder="parentObject"/>
            </condition>
            <condition type="inventoryItem" requireAll="false">
                <inv type="stat" dataType="inventory" holder="subject"/>
                <item type="stat" dataType="stringSet" stat="lock_keys" holder="parentObject"/>
            </condition>
        </condition>
        <script type="setState" state="locked" holder="parentObject">
            <var dataType="boolean" value="false"/>
        </script>
    </action>
    <action id="vending_nitron_cola">
        <prompt>Buy Nitron Cola (10)</prompt>
        <phrase>vendingMachineBuy</phrase>
        <condition type="compare" equality="GREATER_EQUAL">
            <var1 type="state" dataType="int" state="money" holder="subject"/>
            <var2 dataType="int" value="10"/>
        </condition>
        <script>
            <script type="addItem">
                <inv type="stat" dataType="inventory" holder="subject"/>
                <var dataType="string" value="nitron_cola"/>
            </script>
            <script type="modifyState" dataType="int" state="money" holder="subject">
                <var dataType="int" value="-10"/>
            </script>
        </script>
    </action>
    <action id="vending_nitron_diet">
        <prompt>Buy Nitron Diet (10)</prompt>
        <phrase>vendingMachineBuy</phrase>
        <condition type="compare" equality="GREATER_EQUAL">
            <var1 type="state" dataType="int" state="money" holder="subject"/>
            <var2 dataType="int" value="10"/>
        </condition>
        <script>
            <script type="addItem">
                <inv type="stat" dataType="inventory" holder="subject"/>
                <var dataType="string" value="nitron_cola"/>
            </script>
            <script type="modifyState" dataType="int" state="money" holder="subject">
                <var dataType="int" value="-10"/>
            </script>
        </script>
    </action>
</data>